load("@aspect_bazel_lib//lib:copy_to_directory.bzl", "copy_to_directory")

filegroup(
  name = "srcs",
  srcs = glob([
    "encoder/**/*.cpp",
    "encoder/*.cpp",
    "encoder/*.h",
    "encoder/3rdparty/*.h",
    "transcoder/*.cpp",
    "transcoder/*.h",
    "zstd/*"
  ]),
  visibility = ["//visibility:public"],
)

filegroup(
  name = "headers",
  srcs = glob([
    "encoder/*.h",
    "transcoder/*.h",
  ]),
  visibility = ["//visibility:public"],
)

copy_to_directory(
  name = "copy_headers",
  srcs = [":headers"],
  out = "./basis_headers"
)

cc_library(
  name = "basis_universal",
  hdrs = [":headers"],
  srcs = [":srcs", ":copy_headers"],
  textual_hdrs = glob(["transcoder/*.inc"]),
  copts = [
    # "-DBASISU_SUPPORT_SSE=1",
    # "-msse4.1",
    "-Iencoder/3rdparty"
  ],
  defines = [
    "BASISD_SUPPORT_KTX2_ZSTD"
  ],
  linkopts = ["-lpthread"],
  visibility = ["//visibility:public"],
)
